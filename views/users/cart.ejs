<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
<%-include('../layouts/userheader')%>

        <main class="main">
        	<div class="page-header text-center" style="background-image: url('assets/images/page-header-bg.jpg')">
        		<div class="container">
        			<h1 class="page-title">Shopping Cart<span>Shop</span></h1>
        		</div><!-- End .container -->
        	</div><!-- End .page-header -->
            <nav aria-label="breadcrumb" class="breadcrumb-nav">
                <div class="container">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/">Home</a></li>
                      
                        <li class="breadcrumb-item active" aria-current="page">Shopping Cart</li>
                    </ol>
                </div><!-- End .container -->
            </nav><!-- End .breadcrumb-nav -->

            <div class="page-content">

				<div class="cart">
					<div class="container">
						<%if(data.length!==0){%>
						<%if(productsFound){%>	
							<p id="noProductmessage"></p>
	                	<div class="row">
	                		<div class="col-lg-9" id="hideData1">
								
	                			<table class="table table-cart table-mobile">
									<thead>
										<tr>
											<th>Product</th>
											<th>Price</th>
											<th>Quantity</th>
											<th>Total</th>
											<th></th>
										</tr>
									</thead>
								<tbody >
										

									
										
										
											
										
										<%data.forEach((value)=>{%>
											
										
											
										<tr class="rowsof" id="row<%=value.productId%>" >
											<td class="product-col"  onclick="rowselection('<%=value.productId%>')">
												<div class="product">
													<figure class="product-media">
														<a href="#">
															<img src="<%=value.image%>" alt="Product image">
														</a>
													</figure>

													<h3 class="product-title">
														<a ><%=value.productName%></a>
													</h3><!-- End .product-title -->
												</div><!-- End .product -->
											</td>
											<%if((value.price*value.offerPercentage/100)!==0){%>
												<td class="price-col"><%=value.price-value.price*value.offerPercentage/100 %></td>
												<%}else{%>
													<td class="price-col"><%=value.price%></td>
												<%}%>
									
											<td class="quantity-col">
                                                <div class="cart-product-quantity">
													<%if((value.price*value.offerPercentage/100)!==0){%>
														
                                                    <input class="numberTag" id="numberTag" type="number" value="<%=value.quantity%>" min="1" max="5" onchange="datachange(this,'<%=value.productId%>','<%=(value.price-value.price*value.offerPercentage/100)%>','<%value.quantity%>')" step="1" data-decimals="0"  required >
													
													<%}else{%>
														<input class="numberTag" id="numberTag" type="number" value="<%=value.quantity%>" min="1" max="5" onchange="datachange(this,'<%=value.productId%>','<%=value.price%>','<%value.quantity%>')" step="1" data-decimals="0"  required >
														<%}%>
                                                </div><!-- End .cart-product-quantity -->
                                            </td>
											<%if((value.price*value.offerPercentage/100)!==0){%>
											<td class="total-col cart_total"  id="total<%=value.productId%>"><%=(value.price-value.price*value.offerPercentage/100)*value.quantity%></td>
											<%}else{%>
												<td class="total-col cart_total"  id="total<%=value.productId%>"><%=value.price*value.quantity%></td>
											<%}%>
										<td class="remove-col"><button class="btn-remove" onclick="return removeRow('<%=value.productId%>','<%=value.price%>')"><i class="icon-close"></i></button></td>
										</tr>
										<%})%>

										
									</tbody>
									
					<!-- product ends here================================================ -->
					
								</table ><!-- End .table table-wishlist -->
								

	                			<div class="cart-bottom">
			            			

			            			
		            			</div><!-- End .cart-bottom -->
	                		</div><!-- End .col-lg-9 -->

						
							<%if(data.length>0){%>
	                		<aside id="hideData" class="col-lg-3" id="cartchart">
								
	                			<div class="summary summary-cart" >
	                				<h3 class="summary-title"> Cart Total </h3><!-- End .summary-title -->

	                				<table class="table table-summary">
	                					<tbody>
	                						
	                						<tr class="summary-subtotal">
	                							<td>Subtotal:</td>
	                							<td id="carttotal"></td>
	                						</tr>
	                						<tr class="summary-shipping">
	                							<td>Shipping: Free</td>
	                							<td>&nbsp;</td>
	                						</tr>
	                						<tr class="summary-total">
	                							<td>Total:</td>
	                							<td id="grandtotal"></td>
	                						</tr><!-- End .summary-total -->
	                					</tbody>
	                				</table><!-- End .table table-summary -->

	                				<a href="/checkout" class="btn btn-outline-primary-2 btn-order btn-block">PROCEED TO CHECKOUT</a>
	                			</div><!-- End .summary -->
								<%}%>
		            			<a href="/product" class="btn btn-outline-dark-2 btn-block mb-3"><span>CONTINUE SHOPPING</span><i class="icon-refresh"></i></a>
	                		</aside><!-- End .col-lg-3 -->
	                	</div><!-- End .row -->
						<%}%>
							<%}else{%>
								<p>YOUR CART IS EMPTY ...</p>
								<%}%>
	                </div><!-- End .container -->
                </div><!-- End .cart -->
            </div><!-- End .page-content -->
        </main><!-- End .main -->
		<script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>
		<script>
			
window.onload=function(){
				var ft=0
				const totalamount=document.getElementsByClassName('cart_total')
				const total=document.getElementById('carttotal')
				const Gtotal=document.getElementById('grandtotal')
				Array.from(totalamount).forEach((element)=>{
						ft+=parseInt(element.textContent)
				})
			total.innerHTML=ft
			Gtotal.innerHTML=ft
			if('<%=cart%>'){
			    Swal.fire({
				text: '<%=cart%>',
				icon: 'success'  
				})
			}
			if('<%=error %>'){
			    Swal.fire({
				text: '<%=error %>',
				icon: 'error'  
				})
			}  
		}
			
function datachange(tag,id,price,quantity){
	

			const countValue=tag.value
			const maxLimit = parseInt(tag.getAttribute('max')) || 5;
			if (countValue == maxLimit) {

				Swal.fire({
					icon: 'error',
					title: 'Product Limit Exceeded',
					text: `Maximum allowed quantity is ${maxLimit}`
				});
			}
			

			const totaltag=document.getElementById('total'+id)
			totaltag.innerHTML=Math.round(countValue*price)
			let finalTotal = 0; 
			const totalamount = document.getElementsByClassName('cart_total')
			Array.from(totalamount).forEach((element) => {
				finalTotal += parseInt(element.textContent)||0;
			});

			document.getElementById('carttotal').innerHTML = finalTotal;
    		document.getElementById('grandtotal').innerHTML = finalTotal;

			fetch(`/cartdynamic?id=${id}&value=${countValue}`,{method:'post'})
			.then(response=>response.json())
			.then((data)=>{
				tag.setAttribute('max', data.stock);
				totaltag.innerHTML=Math.round(data.stock*price)
				let flAmount=0;
				Array.from(totalamount).forEach((element) => {
				flAmount += parseInt(element.textContent)||0;
			});
			document.getElementById('carttotal').innerHTML = flAmount;
    		document.getElementById('grandtotal').innerHTML = flAmount;
				
			if (data.msg) {
                tag.value = data.stock;

                Swal.fire({
                    title: 'Stock Limit',
                    text: data.msg,
                    icon: 'info'
                });
            }

			})
}





		function removeRow(id,price){
			
				Swal.fire({
            title: 'Are you sure?',
            text: 'You are about to remove this product.',
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#d33',
            cancelButtonColor: '#3085d6',
            confirmButtonText: 'Yes, remove it!'
        }).then((result) => {
            if (result.isConfirmed) {
             document.getElementById('row'+id).remove()
				let rowof=document.getElementsByClassName('rowsof')
				if(rowof.length<=0){
					document.getElementById("hideData").remove()
					document.getElementById("hideData1").remove()
					document.getElementById("noProductmessage").innerHTML="YOUR CART IS EMPTY..."

				}
			const total=document.getElementById('carttotal')
			const Gtotal=document.getElementById('grandtotal')
			
				fetch('/removeCartProduct?id='+id,{method:'post'})
				const totalprice=total.textContent-price
			const Grandtotal=Gtotal.textContent-price
				total.innerHTML=totalprice
			Gtotal.innerHTML=Grandtotal
			
				window.location.reload()
            }
        });
				
			
				
			}

		</script>
		
        <%-include('../layouts/userfooter')%>
       