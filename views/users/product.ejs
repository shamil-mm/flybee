    <script>
        let filterState = {
        search: "",
        category: [],
        size: [],
        minPrice: null,
        maxPrice: null,
        sort: "newArrival",
        page: 1,
        };

        /* ================= FETCH ================= */

        function fetchProducts() {
        const params = new URLSearchParams();

        Object.entries(filterState).forEach(([key, value]) => {
            if (Array.isArray(value)) {
            value.forEach(v => params.append(key, v));
            } else if (value !== null && value !== "") {
            params.append(key, value);
            }
        });

        fetch(`/products?${params.toString()}`)
            .then(res => res.json())
            .then(data => {
            renderProducts(data.products);
            renderPagination(data.totalPages, data.currentPage);
            })
            .catch(err => console.error("Fetch error:", err));
        }

        /* ================= SEARCH (DEBOUNCED) ================= */

        let searchTimeout;
        function searchProducts(value) {
        clearTimeout(searchTimeout);
        searchTimeout = setTimeout(() => {
            filterState.search = value;
            filterState.page = 1;
            fetchProducts();
        }, 400);
        }

        /* ================= CATEGORY FILTER ================= */

        function catagoryFilter() {
            
        const checked = [
            ...document.querySelectorAll('.category_input:checked')
        ].map(el=>el.value)
        
        filterState.category = checked;
        filterState.page = 1;
        fetchProducts();
        }

        /* ================= SIZE FILTER ================= */

        document.querySelectorAll('.size_input').forEach(input => {
        input.addEventListener('change', () => {
            filterState.size = [
            ...document.querySelectorAll('.size_input:checked')
            ].map(i => i.value);

            filterState.page = 1;
            fetchProducts();
        });
        });

        /* ================= PRICE FILTER ================= */

        function onPriceChange(min, max) {
        filterState.minPrice = min;
        filterState.maxPrice = max;
        filterState.page = 1;
        fetchProducts();
        }

        /* ================= SORT ================= */

        document.getElementById('sortby').addEventListener('change', e => {
        filterState.sort = e.target.value;
        filterState.page = 1;
        fetchProducts();
        });

        /* ================= PAGINATION ================= */

        function goToPage(page) {
        filterState.page = page;
        fetchProducts();
        }

        function renderPagination(totalPages, currentPage) {
            console.log(totalPages,currentPage)
        const container = document.getElementById('pagination');
        console.log(container)
        container.innerHTML = "";

        for (let i = 1; i <= totalPages; i++) {
            container.innerHTML += `
            <button 
                
                class="${i === currentPage ? 'active' : ''}"
                onclick="goToPage(${i})">
                ${i}
            </button>
            `;
        }
        }

        /* ================= PRODUCT RENDER ================= */

        function renderProducts(products) {
            const container = document.getElementById('product-container');

            container.innerHTML = `
                <div class="row"></div>
            `;

            const row = container.querySelector('.row');

            if (!products || !products.length) {
                row.innerHTML = "<p style='text-align:center;width:100%'>No products found</p>";
                return;
            }

            products.forEach(product => {
                // lowest price from variants
                const prices = product.variants.map(v => Number(v.price));
                const lowestPrice = Math.min(...prices);
               

                row.innerHTML += `
                <div class="col-12 col-sm-6 col-md-4 col-lg-4 col-xl-3">
                    <div class="product">
                        <figure class="product-media" style="max-height: 23em;">

                            ${product.stock <= 0
                                ? `<span class="product-label label-out">Out of Stock</span>`
                                : ""
                            }

                            <div class="image_div">
                                <a href="/productView?id=${product._id}">
                                    <img 
                                        src="${product.variants[0].images[2]}"
                                        alt="Product image"
                                        class="product-image"
                                        height="10rem"
                                    >
                                </a>
                            </div>

                            <div class="product-action action-icon-top">
                                <a href="/productView?id=${product._id}"
                                class="btn-product btn-cart"
                                title="add to cart">
                                    <span>add to cart</span>
                                </a>

                                <a href="/addWishlist?id=${product._id}"
                                class="btn-product btn-wishlist"
                                title="wishlist">
                                    <span>wishlist</span>
                                </a>
                            </div>
                        </figure>

                        <div class="product-body" style="text-align: center;">
                            <div class="product-cat">
                                <a href="#">${product.category?.name || ""}</a>
                            </div>

                            <h3 class="product-title">
                                <a href="/productView?id=${product._id}">
                                    ${product.product_name}
                                </a>
                            </h3>

                            <p style="max-height: 8vh; overflow: scroll; scrollbar-width: none;">
                                ${product.description}
                            </p>

                            ${
                                product.finalPercentage && product.finalPercentage!==lowestPrice
                                ? `
                                <div style="text-align:center;">
                                    Price :
                                    <del>₹ ${lowestPrice}</del><br>
                                    <span style="color:#c69c61;">
                                        OFFER (${product.finalPercentage}%)<br>
                                        New Offer Price : ₹ ${(lowestPrice-lowestPrice*product.finalPercentage/100).toFixed(0)}
                                    </span>
                                </div>
                                `
                                : `
                                <div style="text-align:center;">
                                    Price : ₹ ${lowestPrice}
                                </div>
                                `
                            }

                            <div class="product-brand" style="text-align:center;">
                                Brand: ${product.brand}
                            </div>
                        </div>
                    </div>
                </div>
                `;
            });
        }

        document.addEventListener("DOMContentLoaded", fetchProducts);
    </script>

