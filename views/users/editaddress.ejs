        <form id="addressForm" action="/addorupdateaddress" method="post">
            <div class="row">
                <div class="col-sm-12">
                    <label>Name *</label>
                    <input type="text" class="form-control" id="name" name="name" value="" >
                </div>
                <div class="col-sm-12">
                    <label>Country *</label>
                    <input type="text" class="form-control" id="country" name="country">
                </div>
                <div class="col-sm-12">
                    <label>Address *</label>
                    <input type="text" class="form-control" id="address" name="address" >
                </div>
