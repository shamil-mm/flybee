<%-include('../layouts/header')%>

            <section class="content-main">
                <div class="content-header">
                    <div>
                        <h2 class="content-title card-title">Products grid</h2>
                        
                    </div>
                    <div>
                 
                        <a href="/admin/add_product" class="btn btn-primary btn-sm rounded">Add New Product</a>
                        <a href="/admin/delete_render" class="btn btn-primary btn-sm rounded">Deletded Product List</a>
                    </div>
                   
                </div>
                <header class="card ">
                    <div class="row gx-1 align-items-center">
                        <div class="col-lg-4 col-md-6 col-lg-12">
                        <form method="get" action="/admin/products">
                        <div class="input-group input-group-sm">
                          <input
                            type="text"
                            name="search"
                            class="form-control"
                            placeholder="Search products..."
                            value="<%= search || '' %>"
                          />
                          <button class="btn btn-primary" type="submit">
                            Search
                          </button>
                        </div>
                      </form>
                        </div>
                    </div>
                </header>

                
              
                 
                   
         <div class="row">
  <% if (data && data.length > 0) { %>
    <% data.forEach((product) => { 
         const firstVariant = product.variants?.[0];
         const image = firstVariant?.images?.[0];
    %>

    <div class="col-xl-3 col-lg-4 col-md-6" id="onecolumn<%= product._id %>">
      <div class="card card-product-grid">

        <br>

      
        <a href="#" class="img-wrap">
          <img 
            style="max-height:16em; object-fit:cover;" 
            src="<%= image || '/assets/imgs/no-image.png' %>" 
            alt="Product Image"
          />
        </a>

        <br>

        <div class="info-wrap text-center">
         
          <div style="font-weight:900;">
            <%= product.product_name %>
          </div>

         >
          <div style="max-height: 9vh; overflow:scroll; scrollbar-width:none;">
            <small><%= product.description %></small>
          </div>

          <% if (firstVariant) { %>
            <div class="price mt-1">Price : â‚¹ <%= firstVariant.price %></div>
            <div class="price mt-1">Stock : <%= firstVariant.stock %></div>
            <div class="price mt-1">
              <small>
                Size: <%= firstVariant.size %> |
                Color: <%= firstVariant.color %>
              </small>
            </div>
          <% } else { %>
            <div class="text-danger mt-2">No variants</div>
          <% } %>

          <br>

          <!-- Actions -->
          <a 
            href="/admin/Edit_product/?id=<%= product._id %>" 
            class="btn btn-sm font-sm rounded btn-brand">
            <i class="material-icons md-edit"></i> Edit
          </a>

          <% if (product.is_list === false) { %>
            <a 
              class="btn btn-sm font-sm btn-light rounded" 
              onclick="listData('<%= product._id %>')" 
              id="list<%= product._id %>">
              List
            </a>
          <% } else { %>
            <a 
              class="btn btn-sm font-sm btn-light rounded" 
              onclick="listData('<%= product._id %>')" 
              id="list<%= product._id %>">
              Unlist
            </a>
          <% } %>

          <a 
            class="btn btn-sm font-sm btn-light rounded" 
            onclick="deletefn('<%= product._id %>')">
            <i class="material-icons md-delete_forever"></i> Delete
          </a>

        </div>
      </div>
    </div>

    <% }) %>
  <% } %>
</div>

        

                
         
                <div class="pagination-area mt-15 mb-50">
                    <nav aria-label="Page navigation example">
                        <ul class="pagination justify-content-start">
                            <li class="page-item">
                                <a class="page-link" href="#"><i class="material-icons md-chevron_left"></i></a>
                            </li>
                            <%for(i=1;i<=totalPages;i++){%>
                            <li class="page-item active"><a class="page-link" href="/admin/products?page=<%=i%>&search=<%=search%>"><%=i%></a></li>
                                <%}%>
                            <li class="page-item">
                                <a class="page-link" href="#"><i class="material-icons md-chevron_right"></i></a>
                            </li>
                        </ul>
                    </nav>
                </div>               
            </section>
            <script>
               function listData(id){
                fetch('/admin/List_product/?id='+id,{method:'post'})
               const list= document.getElementById('list'+id)
              
               if(list.innerText=="List"){   
                list.innerText='Unlist'
               }   
               else if(list.innerText=="Unlist"){   
                list.innerText="List"
               }   
               }
              function deletefn(id){
Swal.fire({
    title: 'Are you sure to delete this?',
    icon: 'warning',
    showCancelButton: true,
    confirmButtonColor: '#d33',
    cancelButtonColor: '#3085d6',
    confirmButtonText: 'Yes sure ! '
  }).then((result) => {
    if (result.isConfirmed) {
        fetch('/admin/delete_pro/?id='+id,{method:'post'})
        .then(response=>response.json())
        .then((data)=>{
            if(data.success){
                Swal.fire({
                    text: data.success,
                    icon: 'info',
                    confirmButtonText: 'OK'
                });
                let x= document.getElementById('onecolumn'+id)
               x.remove()

            }else if(data.fail){
                Swal.fire({
                    text: data.fail,
                    icon: 'info',
                    confirmButtonText: 'OK'
                });

            }
           

        })

        
    }
  });

 }
              
