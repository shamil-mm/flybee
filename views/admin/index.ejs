
<style>
    .radio-input {
  /* Hide the default radio button */
  appearance: none;
  -webkit-appearance: none;
  -moz-appearance: none;
  /* Use a custom style for the radio button */
  width: 18px;
  height: 18px;
  border: 1px solid #c5600d91;
  background-color:  #c5600d25;
  border-radius: 50%;
  outline: none; /* Remove outline when focused */
  cursor: pointer;
}

/* Style when the radio button is checked */
.radio-input:checked {
  background-color:  #c5600d06;
}

/* Optional: Style the label associated with the radio button */
.radio-label {
  font-size: 16px;
  margin-left: 10px; /* Adjust as needed */
}

    
</style>



<%-include('../layouts/header')%>

            <section class="content-main">
                <div class="content-header">
                    <div>
                        <h2 class="content-title card-title">Dashboard</h2>
                       
                    </div>
                   
                </div>
                <div class="row">
                    <div class="col-lg-4">
                        <div class="card card-body mb-4">
                            <article class="icontext">
                                <span class="icon icon-sm rounded-circle bg-primary-light"><i class="text-primary material-icons md-monetization_on"></i></span>
                                <div class="text">
                                    <h6 class="mb-1 card-title">Revenue</h6>
                                    <span><%= totalRevenue %> â‚¹</span>
                                    <span class="text-sm"> Shipping fees are not included </span>
                                </div>
                            </article>
                        </div>
                    </div>
                    <div class="col-lg-4">
                        <div class="card card-body mb-4">
                            <article class="icontext">
                                <span class="icon icon-sm rounded-circle bg-success-light"><i class="text-success material-icons md-local_shipping"></i></span>
                                <div class="text">
                                    <h6 class="mb-1 card-title">Orders</h6>
                                    <span><%= totalorderCount%></span>
                                    <span class="text-sm"> Excluding orders in transit </span>
                                </div>
                            </article>
                        </div>
                    </div>
                    <div class="col-lg-4">
                        <div class="card card-body mb-4">
                            <article class="icontext">
                                <span class="icon icon-sm rounded-circle bg-warning-light"><i class="text-warning material-icons md-qr_code"></i></span>
                                <div class="text">
                                    <h6 class="mb-1 card-title">Products</h6>
                                    <span><%=countoftotalproduct%></span>
                                    <span class="text-sm"> Excluding listed products </span>
                                </div>
                            </article>
                        </div>
                    </div>
                   
                </div>
                <div class="row">
                    <div class="col-xl-8 col-lg-12">
                        <div class="card mb-4">
                            <article class="card-body">
                                <h5 class="card-title">Sale statistics</h5>
                                <div id="chartControls" style="text-align: center;">
                                    <label for="yearlyRadio" class="radio-label">
                                        <input type="radio" name="chartType" id="yearlyBtn" class="radio-input" onclick="updateChart('Yearly')">
                                        Yearly
                                    </label>
                                    <label for="monthlyRadio" class="radio-label">
                                        <input type="radio" name="chartType" id="monthlyBtn" class="radio-input" onclick="updateChart('Monthly')">
                                        Monthly
                                    </label>
                                    <label for="weeklyRadio" class="radio-label">
                                        <input type="radio" name="chartType" id="weeklyBtn" class="radio-input" onclick="updateChart('Weekly')">
                                        Weekly
                                    </label>
                                    

                                   
                                    
                                </div>
                                <canvas id="myChart" height="120px"></canvas>
                            </article>
                        </div>
                        
                    </div>
                    <div class="col-xl-4 col-lg-12">
                        <div class="card mb-4">
                            <article class="card-body" style="height: 24.2rem;">
                                <h5 class="card-title">Best selling products</h5>
                                <br><br><br>
                                <canvas id="myChart2" height="217"></canvas>
                            </article>
                        </div>
                       
                    </div>
                </div>
                <div class="card mb-4">
                   
                    <div class="card-body">
                        <h4 class="card-title">Top selling category</h4>
                        <div class="table-responsive">
                            <div class="table-responsive">
                                <table class="table align-middle table-nowrap mb-0">
                                    <thead class="table-light">

                                        <tr>
                                            
                                            
                                            <th class="align-middle" scope="col">category name</th>
                                            <th class="align-middle" scope="col">description</th>
                                            <th class="align-middle" scope="col">Total</th>
                                   
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% categoryDetails.forEach((value)=>{%>
                                            <tr>
                                                <td><%=value.name%></td>
                                                <td><%=value.description%></td>
                                                <td><%=value.totalOrdered%></td>
                                            </tr>


                                        <%})%>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
              
            </section>
            <script src="/js/chart-helper.js"></script>
      
